<SimpleMode>:
    id: simple_mode
    cols: 1
    padding: 5
    spacing: 10, 10
    size_hint_y: None
    height: '140dp'
    MyGrid:
        MyLabel:
            id:lang
            size_hint: 0.3, 0.6
            font_size: '18sp'
            text: "Простой режим"
        ModeToggle:
            id: simple_checkbox
            size_hint: 0.1, 0.6
            canvas.before:
                Color:
                    rgb: 0,0,0
                Line:
                    width: 1
                    ellipse: (self.center_x-9, self.center_y-8, 16, 16)
            on_release:
                app.main.action_button_callback(Const.SETUP, [Const.DEL_COLORS])
                app.main.action_button_callback(Const.CHANGE_MODE, Const.SIMPLE_MODE)
        MyLabel:

    GridLayout:

        cols: 12
        padding: 5
        spacing: 10, 10
        size_hint_y: None
        height: '80dp'

        ColoredLabel:
            id:simple_scarlett
            size_hint: 0.1, 1
            color: 0.839, 0, 0.576, 1

        ColoredLabel:
            id:simple_red
            size_hint: 0.1, 1
            color: 1, 0, 0, 1

        ColoredLabel:
            id:simple_orange
            size_hint: 0.1, 1
            color: 1, 0.501, 0, 1

        ColoredLabel:
            id:simple_yellow
            size_hint: 0.1, 1
            color: 1, 1, 0, 1

        ColoredLabel:
            id:simple_lemon
            size_hint: 0.1, 1
            color: 0.6, 1, 0.2, 1

        ColoredLabel:
            id:simple_green
            size_hint: 0.1, 1
            color: 0.2, 0.8, 0.2, 1

        ColoredLabel:
            id:simple_tirq
            size_hint: 0.1, 1
            color: 0, 0.8, 1, 1

        ColoredLabel:
            id:simple_blue
            size_hint: 0.1, 1
            color: 0, 0.4, 1, 1

        ColoredLabel:
            id:simple_indigo
            size_hint: 0.1, 1
            color: 0, 0, 0.8, 1

        ColoredLabel:
            id:simple_violett
            size_hint: 0.1, 1
            color: 0, 0, 0.6, 1

        ColoredLabel:
            id:simple_purple
            size_hint: 0.1, 1
            color: 0.6, 0, 1, 1

        ColoredLabel:
            id:simple_magenta
            size_hint: 0.1, 1
            color: 0.8, 0, 0.8, 1


        SimpleCheckbox:
            id: simple_scarlett_button
            color: simple_scarlett.color
            disabled: True if simple_checkbox.state == 'normal' else False
            state: 'normal' if simple_checkbox.state == 'normal' else 'normal'

